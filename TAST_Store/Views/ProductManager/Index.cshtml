@{
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}
@model TAST_Store.ViewModels.ProductManagerViewModel
<div class="panel panel-primary">

    <div class="panel-heading panel-heading-prod">
        <i class="fa fa-spinner fa-spin"></i> Thêm mới sản phẩm
    </div>

    <div class="panel-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <form class="form form-horizontal" asp-action="Index" asp-controller="ProductManager"
              method="POST">
            <div class="form-group">

                <label asp-for="Product.NamePro" class="col-md-3 control-label">Tên sản phẩm:</label>

                <div class="col-md-9">
                    <input class="form-control" asp-for="Product.NamePro"
                           placeholder="Nhập tên sản phẩm" autofocus required />

                    <span asp-validation-for="Product.NamePro" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Product.Nums" class="col-md-3 control-label">Số lượng:</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Product.Nums"
                           placeholder="Nhập số lượng sản phẩm "required />

                    <span asp-validation-for="Product.Nums" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">

                <label asp-for="Product.Price" class="col-md-3 control-label">Giá:</label>

                <div class="col-md-9">
                    <input class="form-control" asp-for="Product.Price"
                           placeholder="Nhập giá sản phẩm" required />

                    <span asp-validation-for="Product.Price" class="text-danger"></span>

                </div>


            </div>
            <div class="form-group">

                <label asp-for="Product.IdCat" class="col-md-3 control-label">Loại sản phẩm:</label>

                <div class="col-md-9">
                    <select class="form-control" asp-for="Product.IdCat" required>
                        @foreach(var item in Model.Cats)
                        {
                            <option value="@item.IdCat">@item.NameCat</option>
                        }
                    </select>

                    <span asp-validation-for="Product.IdCat" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">

                <label asp-for="Product.Img1" class="col-md-3 control-label">Hình 1:</label>

                <div class="col-md-9">
                    <input type="file" class="form-control" asp-for="Product.Img1" accept="image/*" autofocus required />

                    <span asp-validation-for="Product.Img1" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">

                <label asp-for="Product.Img2" class="col-md-3 control-label">Hình 2:</label>

                <div class="col-md-9">
                    <input type="file" class="form-control" asp-for="Product.Img2" accept="image/*" autofocus required />

                    <span asp-validation-for="Product.Img2" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">

                <label asp-for="Product.Img3" class="col-md-3 control-label">Hình 3:</label>

                <div class="col-md-9">
                    <input type="file" class="form-control" asp-for="Product.Img3" accept="image/*" autofocus required />

                    <span asp-validation-for="Product.Img3" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-danger">Thêm sản phẩm</button>
                </div>
            </div>
        </form>
    </div>
</div>
