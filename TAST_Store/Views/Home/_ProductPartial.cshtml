@model TAST_Store.ViewModels.HomeViewModel
<div class="panel panel-info panel-prod">

    <div class="panel-heading panel-heading-prod">
        <i class="fa fa-spinner fa-spin"></i> @Model.MaleCateProds.NameCat
    </div>

    <div class="panel-body">
        <div class="row">
            @foreach (var item in Model.MaleProds)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="~/@item.Img1" class="img-rounded" alt="@item.NamePro" style="height: 235px;">
                        <div class="caption">
                            <h4>@item.NamePro</h4>
                            @if (item.Sale != null)
                            {
                                <p class="rainbow-text">Giá sale: @string.Format("{0:N0}", item.Price - (item.Price * item.Sale)) VNĐ</p>
                            }
                            else
                            {
                                <p>Giá: @string.Format("{0:N0}", item.Price) VNĐ</p>
                            }
                            <p>
                                <a href="san-pham/@item.Link-@item.IdPro" class="btn btn-info" role="button"><i class="fa fa-rocket"></i> Chi tiết</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="panel-footer">
        <p class="more-prod">
            <a href="@Model.MaleCateProds.Link-@Model.MaleCateProds.IdCat">Xem thêm sản phẩm...</a>
        </p>
    </div>
</div>

