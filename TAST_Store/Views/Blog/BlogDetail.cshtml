@model TAST_Store.ViewModels.BlogViewModel
@foreach (var item in Model.Blogs)
{
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 text-center">
                    <img id="mainImage" src="@item.Img" alt="Main
Image" class="img-responsive main-image">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h1>@item.Title</h1>
            
            <h2>@item.Detail</h2>
        </div>
    </div>
    
}

