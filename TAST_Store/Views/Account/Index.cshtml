@{
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}
@model TAST_Store.ViewModels.AccountViewModel
<div class="panel panel-primary">

    <div class="panel-heading panel-heading-prod">
        <i class="fa fa-spinner fa-spin"></i> Tài khoản khách
    </div>
    <div class="panel-body">
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr style="text-align:center;font-weight:bold">
                        <td>ID</td>
                        <td>Username</td>
                        <td>Họ tên</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        if (item.Permission == 0)
                        {
                            <tr>
                                <td style="text-align:center">@item.IdUsers</td>
                                <td>@item.Username</td>
                                <td>@item.Name</td>
                                <td>
                                    <button class="btn btn-danger" href="#">Xóa</button>
                                    <button type="button" class="btn btn-success">Chỉnh sửa</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="panel panel-danger">

    <div class="panel-heading panel-heading-prod">
        <i class="fa fa-spinner fa-spin"></i> Tài khoản Admin
    </div>
    <div class="panel-body">
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr style="text-align:center;font-weight:bold">
                        <td>ID</td>
                        <td>Username</td>
                        <td>Họ tên</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        if (item.Permission == 1)
                        {
                            <tr>
                                <td style="text-align:center">@item.IdUsers</td>
                                <td>@item.Username</td>
                                <td>@item.Name</td>
                                <td>
                                    <button class="btn btn-danger" href="#">Xóa</button>
                                    <button type="button" class="btn btn-success">Chỉnh sửa</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>