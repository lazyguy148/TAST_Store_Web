@model TAST_Store.ViewModels.UserViewModel
<div class="panel panel-primary">

    <div class="panel-heading panel-heading-prod">
        <i class="fa fa-spinner fa-
spin"></i> Thông tin người dùng
    </div>

    <div class="panel-body">
        <form class="form form-horizontal" asp-action="EditInfo" asp-controller="User" method="POST">
            <div class="form-group">
                <label class="col-md-3">Tên đăng nhập: </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Register.Username" readonly/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Họ và tên: </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Register.Name"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Địa chỉ: </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Register.Address"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Email: </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Register.Email"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Số điện thoại: </label>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Register.Phone"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</div>
